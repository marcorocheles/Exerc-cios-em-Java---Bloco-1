package atividadeDia08;

import java.util.Scanner;

public class Exercicio3 {
	/*
	 * inteiro segundosTotais, horas, minutos, segundos

		escreva("Insira a duração do evento em segundos: ")	
		leia(segundosTotais)
		
		horas = segundosTotais / 3600
		minutos = (segundosTotais % 3600) / 60
		segundos = (segundosTotais % 3600) % 60

		limpa()			
		escreva("O evento durará " + horas + " horas, "
		+ minutos + " minutos e " 
		+ segundos + " segundos.")
	 */

	public static void main(String[] args) {
		
		Scanner leia = new Scanner (System.in);
		int segundosTotais, horas, minutos, segundos;
		
		System.out.println("Insira a duração do evento em segundos: ");
		segundosTotais = leia.nextInt();
		
		horas = segundosTotais / 3600;
		minutos = (segundosTotais % 3600) / 60;
		segundos = (segundosTotais % 3600) % 60;
		
		System.out.println("O evento durará " + horas + " horas" + minutos + " minutos e " + segundos + " segundos.");
		
				
		

	}

}
